<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dictionary" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SplashScreenApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreenApp">
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/bg_splash_12</item>
        <item name="android:windowSplashScreenAnimationDuration">800</item>
    </style>

</resources>