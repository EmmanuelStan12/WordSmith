<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_synonyms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:text="Synonyms"
        android:textSize="20sp"
        android:textColor="@color/color_BlackText"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:id="@+id/tv_synonyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_synonyms_label"
        android:text="Synonyms"
        android:textSize="16sp"
        android:textColor="@color/color_BlackText"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:id="@+id/tv_antonyms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_synonyms"
        android:layout_marginTop="16dp"
        android:text="Antonyms"
        android:textSize="20sp"
        android:textColor="@color/color_BlackText"
        android:fontFamily="@font/roboto_medium"
        />

    <TextView
        android:id="@+id/tv_antonyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_antonyms_label"
        android:text="Antonyms"
        android:textSize="16sp"
        android:textColor="@color/color_BlackText"
        android:fontFamily="@font/roboto_medium"
        />

</androidx.constraintlayout.widget.ConstraintLayout>