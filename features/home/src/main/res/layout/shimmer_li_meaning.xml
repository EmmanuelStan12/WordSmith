<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/switch_availability"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/color_LightGrey"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_receive_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/switch_availability"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/switch_availability"
            android:layout_marginStart="16dp"
            android:background="@color/color_LightGrey" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_available_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_receive_header"
            app:layout_constraintEnd_toEndOf="@id/tv_receive_header"
            app:layout_constraintTop_toBottomOf="@id/tv_receive_header"
            android:layout_marginTop="6dp"
            android:background="@color/color_LightGrey"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_available_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_receive_header"
            app:layout_constraintEnd_toEndOf="@id/tv_receive_header"
            app:layout_constraintTop_toBottomOf="@id/tv_available_time"
            android:layout_marginTop="6dp"
            android:background="@color/color_LightGrey" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>